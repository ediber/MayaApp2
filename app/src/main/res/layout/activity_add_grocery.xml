<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.e.myapp2.ui.AddGroceryActivity">

    <FrameLayout
        android:id="@+id/grocery_frame"
        android:layout_width="397dp"
        android:layout_height="637dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grocery_constraintLayout2">

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grocery_constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="@+id/grocery_add_contact_button"
            app:layout_constraintTop_toBottomOf="@+id/grocery_add_contact_button">

            <TextView
                android:id="@+id/grocery_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginTop="48dp"
                android:text="contact_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/grocery_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="contact_phone"
                app:layout_constraintStart_toStartOf="@+id/grocery_contact_name"
                app:layout_constraintTop_toBottomOf="@+id/grocery_contact_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/grocery_add_contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="add_contact_button"
            app:layout_constraintStart_toStartOf="@+id/grocery_name_edit"
            app:layout_constraintTop_toBottomOf="@+id/grocery_name_edit" />

        <Button
            android:id="@+id/grocery_save_nutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginBottom="32dp"
            android:text="save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <EditText
            android:id="@+id/grocery_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="68dp"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/grocery_camcel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="camcel"
            app:layout_constraintStart_toEndOf="@+id/grocery_save_nutton"
            app:layout_constraintTop_toTopOf="@+id/grocery_save_nutton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>